import unittest

from unittest.mock import patch
from app import app
from app.util import forms
from app.util.forms import FlaskForm, StringField, SubmitField, DataRequired, verify_invite_code_exists


class TestForms(unittest.TestCase):
    def setUp(self):
        pass

    def tearDown(self):
        pass

    @patch('app.util.classroom.FlaskForm')
    @patch('app.util.classroom.StringField')
    @patch('app.util.classroom.SubmitField')
    @patch('app.util.classroom.DataRequired')
    @patch('app.util.classroom.verify_invite_code_exists')
    def test_create_cohort(self):
        cc = forms.CreateCohort()

        forms.FlaskForm.validate.return_value = True
        assert not cc.validate(cc)

        forms.FlaskForm.validate.return_value = False
        forms.verify_invite_code_exists.return_value = True
        assert not cc.validate(cc)


    def test_edit_cohort(self):
        pass

    def test_create_login(self):
        pass


if __name__ == '__main__':
    unittest.main()
